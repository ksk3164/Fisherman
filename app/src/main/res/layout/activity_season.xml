<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".SeasonActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:id="@+id/spring_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageButton"
                android:layout_width="200dp"
                android:layout_height="130dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/undraw_spring" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="SPRING"
                android:textColor="@color/pupple"
                android:textSize="30sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/summer_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageButton2"
                android:layout_width="200dp"
                android:layout_height="130dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/undraw_summer" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="SUMMER"
                android:textColor="@color/pupple"
                android:textSize="30sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/autumn_lyaout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageButton3"
                android:layout_width="200dp"
                android:layout_height="130dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/undraw_fall" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="AUTUMN"
                android:textColor="@color/pupple"
                android:textSize="30sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/winter_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageButton4"
                android:layout_width="200dp"
                android:layout_height="130dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/undraw_winter" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="WINTER"
                android:textColor="@color/pupple"
                android:textSize="30sp" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>