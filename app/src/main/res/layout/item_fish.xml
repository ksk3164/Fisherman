<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:background="@drawable/pupple_edge"
    android:layout_margin="4dp"

    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_fish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/undraw_fishing_logo" />

    <TextView
        android:id="@+id/tv_fish_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="문희는포도가"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/pupple"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_fish" />
</androidx.constraintlayout.widget.ConstraintLayout>